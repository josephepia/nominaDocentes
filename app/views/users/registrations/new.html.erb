<div class="row center-xs">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <div class="col-xs">
      <div class="card borde-radio-8 padding-14">
        <div class="card-content">
          <span class="card-title">Registrame</span>
          <div class="input-field row">
            <i class="material-icons prefix">account_circle</i>
            <%= f.label :identificacion %><br />
            <%= f.text_field :identificacion, autofocus: true, autocomplete: "identificacion", class: "input-field " %>
          </div>
          <div class="input-field row">
            <i class="material-icons prefix">account_circle</i>
            <%= f.label :nombre, "Nombre completo" %><br />
            <%= f.text_field :nombre, autofocus: true, autocomplete: "nombre", class: "input-field " %>
          </div>
          <div class="input-field row">
            <i class="material-icons prefix">account_circle</i>
            <%= f.label :email, "correo" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field " %>
          </div>
          <div class="input-field row">
            <i class="material-icons prefix">account_circle</i>
            <%= f.password_field :password, autocomplete: "new-password" %>
            <%= f.label :password, "Contraseña" %>
            <% if @minimum_password_length %>
              <span class="helper-text" data-error="wrong" data-success="right">(<%= @minimum_password_length %> caracteres minimos)</span>
            <% end %>
          </div>
          <div class="input-field row">
            <i class="material-icons prefix">account_circle</i>
            <%= f.label :password_confirmation, "confirmar contraseña" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        </div>
        <div class="box">
          <div class="row end-xs">
            <div class="col-xs ">
              <button class="btn waves-effect waves-light borde-radio-40" type="submit" name="action">Registarme</button>
            </div>
          </div>
          <div class="row end-xs padding-horizontal-14">
            <%= render "users/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
